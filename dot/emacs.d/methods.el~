;; A simple outlet for me to express my inner FRUSTRATIONS in the form of functions :)

(defun disp-manual ()
  (interactive)
  (shell-command "disp"))

(defun disp-end ()
  (interactive)
  (shell-command "xrandr --output VIRTUAL4 --off")
  (shell-command "intel-virtual-output"))

(defun scrot ()
  (interactive)
  (shell-command "scrot -s"))
